{% extends 'base.html.twig' %}

{% block title %}Tous mes flahs{% endblock %}

{% block body %}
    <h1>Tous mes flahs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Categorie</th>
                <th>Photo</th>
                <th>Reservé</th>
                <th>En ligne</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for flash in flashes %}
            <tr>
                <td>{{ flash.id }}</td>
                <td>{{ flash.name }}</td>
                <td>{{ flash.category.name }}</td>
                <td><img src="/assets/flash/{{ flash.photo }}" height="200" alt={{ flash.name }}/></td>
                <td>{{ flash.reserved ? 'Yes' : 'No' }}</td>
                <td>{{ flash.online ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('flash_show', {'id': flash.id}) }}">Voir</a>
                    <a href="{{ path('flash_edit', {'id': flash.id}) }}">Modifier</a>
                    {{ include('admin/flash/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun flash trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('flash_new') }}">Ajouter un nouveau flash</a>
{% endblock %}
