{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}
{% block h1 %} <h1>Categorie - détails</h1>{% endblock %}

{% block body %}
<div class="main">

    <table class="table">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ category.photo }}</td>
            </tr>

        </tbody>
    </table>

    <div class="all-flashes">

        <h3> Les flashs associés </h3>

        {% for flash in category.flashes %}

            <div class="flash">
                <h4> {{flash.name}} </h4>
                <img src="/assets/flash/{{flash.photo}}" height="200"/>
            </div>

        {% endfor %}

    </div>

    <a href="{{ path('category_index') }}">Retour</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}"><i class="material-icons">edit</i></a>

    {{ include('admin/category/_delete_form.html.twig') }}
</div>
{% endblock %}
