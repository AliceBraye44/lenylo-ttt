{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}
{% block h1 %} <h1>Modifier la catégorie</h1>{% endblock %}

{% block body %}
<div class="main">

    {{ include('admin/category/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <a href="{{ path('category_index') }}">Retour</a>

    {{ include('admin/category/_delete_form.html.twig') }}

    <div class="all-flashes">

        <h3> Les flashs associés </h3>

        {% for flash in category.flashes %}

            <div class="flash">
                <h4> {{flash.name}} </h4>
                <img src="/assets/flash/{{flash.photo}}" height="200"/>
            </div>

        {% endfor %}

    </div>
</div>
{% endblock %}
